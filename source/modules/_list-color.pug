mixin group-input-list-color({label, id, placeholder})
  -
    var colors = ["#373737", "#555", "#888", "#b5b5b5", "#f0f0f0", "#ff6b00", "#e46000", "#ff9359", "#083ea9", "#3471eb", "#548dff", "#fff", "#f05151", "#fa8383", "#43aa49", "#ec3f3f", "#4a90e2"]
  form.form-custom
    .form-group.form-list-color
      label(
        for= id ? id : null
      )= label
      .list-box
        ul.unstyled.list-box__color
          each val in colors
            li.list-box__item(style = `background-color : ${val}`)
        .list-box__input
          input.form-control(
            type= type ? type : "text"
            placeholder= placeholder ? placeholder : null
            id= id
          )
          i.icon-images.icon-images--color-picker
