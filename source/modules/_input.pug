mixin group-input-field({label, id, placeholder, size, require, iconBefore, iconAfter, noteText, noticeError, disabled})
  .form-group.form-customize(class= disabled ? `form-group--${disabled}` : null)&attributes(attributes)
    label(
      for = id ? id : null 
    )= label
      if (require !== '' && require !== undefined)
        span.require *
    .input-field(class = size ? 'input-field--#{size}' : null  )
      if (iconBefore !== '' && iconBefore !== undefined)
        span.input-field__icon.input-filed__icon--before
          i(class= iconBefore)
      input.form-control(
        type = type ? type : "text"
        placeholder = placeholder ? placeholder : null
        id = id ? id : null
        value = value ? value : null
        disabled = disabled ? disabled : null
      )
      if (iconAfter !== '' && iconAfter !== undefined)
        span.input-field__icon.input-filed__icon--after.js-toggle-icon
          i(class= iconAfter)
    if (noteText !== '' && noteText !== undefined)
      p.note-text= noteText
    if (noticeError !== '' && noticeError !== undefined)
      p.error-notice
        i.error-notice__icon.ion-close-circled
        | #{noticeError}
mixin group-input-field-readonly({label, value})
  .form-group(
    class = "form-customize"
  )&attributes(attributes)
    label= label
    .input-field
      input.form-control(
        type = type ? type : "text"
        value = value
        readonly = "readonly"
      )