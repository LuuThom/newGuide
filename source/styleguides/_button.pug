            | })
h2 Button Size
.row
  each item in ['primary', 'secondary', 'olight', 'blight']
    .col-3
      each val in ['xsmall', 'small', 'medium', 'large']
        .code-example
          .demo
            +buttons({
              text:'テキストデモ',
              type: item,
              size: val,
            })
          pre
            code
              |+buttons({
              |  text:'テキストデモ',
              |  type: #{item},
              |  size: #{val},
              |})
  
